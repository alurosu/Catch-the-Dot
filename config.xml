<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "alurosu.games.catchthedot"
    versionCode = "50"
    version     = "1.3.5" >

	<name>Catch the Dot</name>

	<description>
		https://play.google.com/store/apps/details?id=alurosu.games.catchthedot
	</description>

	<author href="https://alurosu.com" email="admin@alurosu.com">
		alurosu
	</author>

	<plugin name="cordova-plugin-media" spec="~5.0.2" source="npm"/>
	<plugin name="cordova-plugin-inappbrowser" spec="~3.0.0"/>
	<plugin name="cordova-plugin-whitelist" spec="~1.3.3"/>
	
	<plugin name="cordova-plugin-inapppurchase-fixed" version="~1.1.2" source="npm"/>
	<plugin name="cordova-plugin-x-socialsharing" version="~5.4.4" source="npm" />
	<plugin name="cordova-plugin-play-games-services" version="~1.1.0" source="npm">
		<param name="APP_ID" value="369675984383" />
	</plugin>
	
	<icon src="icon.png" />
	<platform name="android">
        <icon src="res/android/xxhdpi.png" qualifier="ldpi" platform="android"/>
